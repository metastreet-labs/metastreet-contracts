{
  "name": "metastreet-contracts",
  "version": "0.1.0",
  "description": "MetaStreet Vault Contracts",
  "scripts": {
    "build": "hardhat compile",
    "clean": "hardhat clean",
    "test": "hardhat test",
    "test:gas": "REPORT_GAS=true hardhat test",
    "test:coverage": "hardhat coverage",
    "lint": "solhint 'contracts/**/*.sol'",
    "lint:ts": "eslint '{test,scripts}/**'",
    "format": "prettier --write 'contracts/**/*.sol'",
    "format:ts": "prettier --write '{test,scripts}/**/*.ts'",
    "analyze": "slither --filter-paths 'node_modules|contracts/test' .",
    "deployment-manager": "ts-node --files scripts/deployment-manager.ts",
    "node": "hardhat node"
  },
  "devDependencies": {
    "@anders-t/ethers-ledger": "^1.0.4",
    "@ethersproject/abi": "^5.5.0",
    "@ethersproject/abstract-signer": "^5.6.0",
    "@ethersproject/address": "^5.6.0",
    "@ethersproject/bignumber": "^5.5.0",
    "@ethersproject/networks": "^5.6.1",
    "@nomiclabs/hardhat-ethers": "^2.0.4",
    "@nomiclabs/hardhat-etherscan": "^3.0.3",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@openzeppelin/hardhat-upgrades": "^1.16.1",
    "@typechain/ethers-v5": "^10.0.0",
    "@typechain/hardhat": "^6.0.0",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.0.0",
    "@types/node": "^17.0.23",
    "@typescript-eslint/eslint-plugin": "^5.10.1",
    "@typescript-eslint/parser": "^5.10.1",
    "chai": "^4.3.4",
    "commander": "^9.1.0",
    "dotenv": "^16.0.0",
    "eslint": "^8.7.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^17.0.0-1",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "ethereum-waffle": "^3.4.0",
    "ethers": "^5.5.3",
    "hardhat": "^2.8.3",
    "hardhat-gas-reporter": "^1.0.7",
    "prettier": "^2.5.1",
    "prettier-plugin-solidity": "^1.0.0-beta.13",
    "solhint": "^3.3.6",
    "solhint-plugin-prettier": "^0.0.5",
    "solidity-coverage": "^0.7.17",
    "ts-node": "^10.4.0",
    "typechain": "^8.0.0",
    "typescript": "^4.5.4"
  },
  "dependencies": {
    "@chainlink/contracts": "0.4.0",
    "@openzeppelin/contracts": "4.4.2",
    "@openzeppelin/contracts-upgradeable": "4.4.2",
    "prb-math": "2.4.3"
  },
  "engines": {
    "node": ">=12.0.0"
  }
}
