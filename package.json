{
  "scripts": {
    "build": "hardhat compile",
    "clean": "hardhat clean",
    "test": "hardhat test",
    "test:coverage": "hardhat coverage",
    "lint": "solhint 'contracts/**/*.sol'",
    "lint:ts": "eslint '{test,scripts}/**'",
    "format": "prettier --write 'contracts/**/*.sol'",
    "format:ts": "prettier --write '{test,scripts}/**/*.ts'",
    "analyze": "slither --filter-paths 'node_modules|contracts/test/thirdparty' .",
    "node": "hardhat node",
    "subgraph-codegen": "graph codegen --output-dir ./subgraph/generated ./subgraph/subgraph.yaml",
    "subgraph-build": "npm run subgraph-codegen && graph build --output-dir ./subgraph/build ./subgraph/subgraph.yaml",
    "subgraph-codegen-local": "graph codegen --output-dir ./subgraph/generated ./subgraph/subgraph.local.yaml",
    "subgraph-build-local": "npm run subgraph-codegen && graph build --output-dir ./subgraph/build ./subgraph/subgraph.local.yaml",
    "subgraph-create-local": "graph create metastreet-labs/metastreet-contracts --node http://127.0.0.1:8020",
    "subgraph-deploy-local": "graph deploy --debug --ipfs http://localhost:5001 --node http://127.0.0.1:8020/ --output-dir ./subgraph/build metastreet-labs/metastreet-contracts ./subgraph/subgraph.local.yaml",
    "subgraph-watch-local": "graph deploy --watch --debug --node http://127.0.0.1:8020/ --ipfs http://localhost:5001 --output-dir ./subgraph/build metastreet-labs/metastreet-contracts ./subgraph/subgraph.local.yaml"
  },
  "devDependencies": {
    "@graphprotocol/graph-cli": "^0.25.3",
    "@graphprotocol/graph-ts": "^0.24.1",
    "@nomiclabs/hardhat-ethers": "^2.0.4",
    "@nomiclabs/hardhat-etherscan": "^2.1.8",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@typechain/ethers-v5": "^7.2.0",
    "@typechain/hardhat": "^2.3.1",
    "@types/chai": "^4.3.0",
    "@types/mocha": "^9.0.0",
    "@types/node": "^12.20.41",
    "@typescript-eslint/eslint-plugin": "^5.10.1",
    "@typescript-eslint/parser": "^5.10.1",
    "chai": "^4.3.4",
    "dotenv": "^10.0.0",
    "eslint": "^8.7.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "ethereum-waffle": "^3.4.0",
    "ethers": "^5.5.3",
    "hardhat": "^2.8.3",
    "hardhat-gas-reporter": "^1.0.7",
    "prettier": "^2.5.1",
    "prettier-plugin-solidity": "^1.0.0-beta.13",
    "solhint": "^3.3.6",
    "solhint-plugin-prettier": "^0.0.5",
    "solidity-coverage": "^0.7.17",
    "ts-node": "^10.4.0",
    "typechain": "^5.2.0",
    "typescript": "^4.5.4"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.4.1",
    "prb-math": "^2.4.1"
  }
}
